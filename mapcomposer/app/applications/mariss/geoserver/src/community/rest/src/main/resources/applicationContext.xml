<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
    xmlns:util="http://www.springframework.org/schema/util">

    <bean name="manageUsid" class="it.geosolutions.npa.rest.USIDFinder">
        <constructor-arg index="0" ref="usidService" />
    </bean>
    <bean class="org.geoserver.rest.RESTMapping">
        <property name="routes">
            <map>
                <entry>
                    <key>
                        <value>/usidrules/{ruleId}</value>
                    </key>
                    <value>manageUsid</value>
                </entry>
                <entry>
                    <key>
                        <value>/usidrules</value>
                    </key>
                    <value>manageUsid</value>
                </entry>
            </map>
        </property>
    </bean>

</beans>
